<%= form_tag '/login', class: 'form-inline' do %>
  <%= text_field_tag :username, nil, class: 'search-query input-small', placeholder: "Username" %>
  <%= password_field_tag :password, nil, class: 'search-query input-small', placeholder: "Password" %>
  <%= submit_tag 'Login', class: 'btn' %>
<% end %>