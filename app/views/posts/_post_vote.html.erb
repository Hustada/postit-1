<%= link_to "<i class='icon-thumbs-up text-success'></i>".html_safe, vote_post_path(obj, vote: true), method: 'post', remote: true if logged_in? %>

<span id="post_<%=obj.id%>_votes"><%= obj.total_votes %></span>

<%= link_to "<i class='icon-thumbs-down icon-flip-horizontal text-error'></i>".html_safe, vote_post_path(obj, vote: false), method: 'post', remote: true if logged_in? %>